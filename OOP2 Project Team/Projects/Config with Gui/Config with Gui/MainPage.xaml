            <Label Content="Logged in as Admin " HorizontalAlignment="Left" Height="36" Margin="28,10,0,0" VerticalAlignment="Top" Width="150" Foreground="White" FontSize="15"/>
            <Button Content="Logout" HorizontalAlignment="Left" Margin="59,46,0,0" VerticalAlignment="Top" Width="78" RenderTransformOrigin="0.517,-3.324" Foreground="WhiteSmoke" Height="31" FontSize="13">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#FF0331"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C40226"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>
        <Grid HorizontalAlignment="Left" Height="88" Margin="10,40,0,0" VerticalAlignment="Top" Width="969">
            <Grid.Background>
                <ImageBrush ImageSource="G:\Workspace\OOP2 Project Team\Projects\Config with Gui\logo\logo.png" />
            </Grid.Background>
